hasil = 0       
while True:
    angka = input('Enter a number: ')
    if angka.isdigit():
        if angka == '0':
            print('The sum of the squares of the even number is:',hasil)
            break
        
        else:
            if int(angka) % 2 == 0:
                hasil += int(angka)**2
    else:
        print('Error: \''+ angka +'\' is not a valid number. Please try again.')